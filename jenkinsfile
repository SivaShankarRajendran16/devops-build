pipeline {
  agent any

  environment {
    APP_NAME = "my-nginx-app"
    DOCKER_USER = credentials('dockerhub-username')
    DOCKER_PASS = credentials('dockerhub-password')
  }

  stages {
    stage('Checkout') {
      steps {
        checkout scm
      }
    }

    stage('Login to DockerHub') {
      steps {
        sh """
          echo "$DOCKER_PASS" | docker login -u "$DOCKER_USER" --password-stdin
        """
      }
    }

    stage('Build Docker Image') {
      steps {
        sh "BUILD_NUMBER=${env.BUILD_NUMBER} DOCKER_USER=${DOCKER_USER} ./build.sh ${env.BRANCH_NAME}"
      }
    }

    stage('Push Docker Image') {
      steps {
        script {
          def repo = (env.BRANCH_NAME == "dev") ? "dev" : "prod"
          def image = "${DOCKER_USER}/${repo}:${env.BUILD_NUMBER}"
          echo "üì§ Pushing Image: ${image}"
          sh "docker push ${image}"
        }
      }
    }

    stage('Deploy the App') {
      when {
        branch 'master'
      }
      steps {
        sh "./deploy.sh"
      }
    }
  }

  post {
    success {
      echo "‚úÖ Successfully deployed for ${env.BRANCH_NAME}"
    }
    failure {
      echo "‚ùå Deployment failed on ${env.BRANCH_NAME}"
    }
  }
}
